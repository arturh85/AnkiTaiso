---
import "@/styles/tailwind.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

import { languageList } from "@/i18n/ui";

const currentLang = Astro.currentLocale || "en";
currentLang as keyof typeof languageList;
---

<!doctype html>
<html lang={currentLang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>AnkiTaiso - Typing Game</title>

    <meta
      name="description"
      content="AnkiTaiso - Typing Game"
    />
    <meta name="robots" content="index, follow" />
    <meta
      name="keywords"
      content="AnkiTaiso Typing Game"
    />

    <meta property="og:type" content="website" />
    <meta property="og:title" content="AnkiTaiso" />
    <meta
      property="og:description"
      content="AnkiTaiso - Typing Game"
    />
    <meta
      property="og:image"
      content="https://raw.githubusercontent.com/arturh85/AnkiTaiso/refs/heads/main/docs/AnkiTaiso-splash.png"
    />
    <meta property="og:url" content="https://arturh85.github.io/AnkiTaiso/" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="AnkiTaiso" />
    <meta
      name="twitter:description"
      content="AnkiTaiso - Typing Game"
    />
    <meta
      name="twitter:image"
      content="https://raw.githubusercontent.com/arturh85/AnkiTaiso/refs/heads/main/docs/AnkiTaiso-splash.png"
    />
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="theme-color" content="#6B5B95" />

    <!-- Schema Markup JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "WebSite",
        "url": "https://www.codextreme.me",
        "name": "AnkiTaiso",
        "description": "AnkiTaiso - Typing Game",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://arturh85.github.io/AnkiTaiso/?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>
  </head>
  <body
    class="bg-gradient-to-br from-gray-900 to-gray-800 text-gray-100 pt-20 min-h-screen"
  >
    <Header />
    <main class="min-h-[calc(100vh-8rem)]">
      <!-- Content -->
      <slot />
    </main>
    <Footer />
  </body>
</html>
